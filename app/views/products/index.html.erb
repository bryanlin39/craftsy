<h1>Craftsy Marketplace</h1>

<div class='row'>
  <% @products.each do |product| %>
    <div class='col-md-4'>
      <div class='card'>
        <a href='/products/<%= product.id %>'><%= image_tag product.picture.url, :class => 'card-img-top', :alt => 'product image' %></a>
        <div class="card-block">
          <h4 class="card-title"><%= link_to product.name, product_path(product) %></h4>
          <p class="card-text"><%= product.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
