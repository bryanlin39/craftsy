<%= render 'layouts/errors', :object => @review %>

<%= form_for [@product, @review] do |f| %>
  <div class='form-group'>
    <%= f.label :content %>
    <br>
    <%= f.text_field :content %>
  </div>
  <div class='form-group'>
    <%= f.label :rating %>
    <br>
    <%= f.text_field :rating %>
  </div>
  <input type='hidden' name='user_id' value='<%= current_user.id %>'>
  <%= f.submit :class => 'btn btn-outline-success'%>
<% end %>
