<!DOCTYPE html>
<html>
  <head>
    <title>Craftsy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="/">Craftsy</a>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/products">Marketplace</a>
          </li>
          <% if !current_user %>
            <li class="nav-item">
              <a class="nav-link" href="/users/sign_up">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/sign_in">Sign In</a>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link" href="/users/<%= current_user.id %>"><%= current_user.username %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/sign_out" data-method='delete'>Sign Out</a>
            </li>
          <% end %>
        </ul>
        <!-- <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form> -->
      </div>
    </nav>

    <div class='container-fluid'>

      <div id='flash'>
        <%= flash[:alert] %>
        <%= flash[:notice] %>
      </div>

      <%= yield %>

    </div>

    <footer class="footer">
      <div class="container text-right">
        <h4>Admin</h4>
        <%= link_to "Add New Product", new_product_path %>
      </div>
    </footer>

  </body>
</html>
